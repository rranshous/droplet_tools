[Unit]
Description=Proxy to local etcd
After=docker.service

[Service]
ExecStartPre=/bin/bash -c "/usr/bin/docker kill etc_ambassador; 0"
ExecStartPre=/bin/bash -c "/usr/bin/docker rm etc_ambassador; 0"
ExecStart=/usr/bin/docker run --name etc_ambassador -t ubuntu /bin/bash -c "mknod backpipe p; nc -l -p 4001 < backpipe | nc 10.100.43.1 4001 > backpipe"
ExecStop=/bin/bash -c "/usr/bin/docker kill etc_ambassador; 0"

[X-Fleet]
Global=true

